<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsFragment">

    <LinearLayout
        android:id="@+id/main_event_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/less_emphasized">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Event Name"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:background="?android:attr/selectableItemBackground"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last checked:"
                android:paddingTop="5dp"
                android:paddingLeft="30dp"
                android:textColor="@color/less_emphasized"/>

            <TextView
                android:id="@+id/last_checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="30dp"
                android:paddingBottom="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/checkInIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckNow"
                android:textSize="18sp"
                android:layout_gravity="center|center_vertical" />

            <Button
                android:id="@+id/checkInOlderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check old date"
                android:layout_gravity="center|center_vertical" />


        </LinearLayout>


    </LinearLayout>
    <!--<View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#DDDDDD"/>
    -->

    <ListView
        android:id="@+id/event_id_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_below="@+id/main_event_details">
    </ListView>

</RelativeLayout>
